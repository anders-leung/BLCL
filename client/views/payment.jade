extends layout

block content
    script(type='text/javascript', src='/js/datatables-sum.js')
    script(type='text/javascript', src='/js/payment/pay.js')

    #table.col-12.tab-content
        table.cell-border
            thead
                tr
                    th
                    th Date Rec'd
                    th Husband Last Name
                    th Husband First Name
                    th Wife Last Name
                    th Wife First Name
                    th Group
                    th Pickup Date
                    th ADV
                    th INV
                    th Cash
                    th Cheque
                    th DD
                    th ET
            tfoot
                tr
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
                    th
            tbody
                each client in clients
                    tr.clickable-row(data-href="/client/" + client.pathName)
                        td.text-nowrap #{client.fileName}
                        td.text-nowrap #{client.pytDate}
                        td.text-nowrap #{client.husband ? client.husband.lastName : ''}
                        td.text-nowrap #{client.husband ? client.husband.firstName : ''}
                        td.text-nowrap #{client.wife ? client.wife.lastName : ''}
                        td.text-nowrap #{client.wife ? client.wife.firstName : ''}
                        td.text-nowrap #{client.group}
                        td.text-nowrap #{client.pickupDate}
                        td.text-nowrap #{client.pytReceived == 'ADV' ? client.pytAmount : ''}
                        td.text-nowrap #{client.pytReceived == 'INV' ? client.pytAmount : ''}
                        td.text-nowrap #{client.pytReceived == 'CA' ? client.pytAmount : ''}
                        td.text-nowrap #{client.pytReceived == 'CK' ? client.pytAmount : ''}
                        td.text-nowrap #{client.pytReceived == 'DD' ? client.pytAmount : ''}
                        td.text-nowrap #{client.pytReceived == 'ET' ? client.pytAmount : ''}