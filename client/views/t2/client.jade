extends ../layout

block content

    if (!client)
        - client = {};

    .card.offset-1.col-10
        form(method='post')
            - var disabled = true;
            - var needsClient = true;
            include ../templates/client.jade

            br

            legend T2 Info
            hr
            .row
                .form-group.col-2
                    label(for='due') Due
                    input#due.form-control.datepicker(name='due' value=client.due)
                .form-group.col-2
                    label(for='bank') Bank
                    input#bank.form-control(name='bank' value=client.bank ? client.bank.name : '')
                .form-group.col-2
                    label(for='bankNumber') Bank Number
                    input#bankNumber.form-control(name='bankNumber' value=client.bank ? client.bank.number : '')

            input.btn.btn-success.offset-1.col-10(type='submit' value='Done' style='margin-top:1%')