extends layout

block content
    link(rel='stylesheet', href='/css/manage_users.css')
    script(type='text/javascript').
        var roles = !{JSON.stringify(options)}
    script(src='/js/manage_users/users.js')

    button#addUser.btn.btn-secondary.pull-right Add User
    h1 Manage Users
    hr
    table.cell-border
        thead
            tr
                th Email
                th Initials
                th Role
                th Password
        tbody
            - for user in users
                tr
                    td.edit #{user.email}
                    td.edit #{user.initials}
                    td.select.roles #{user.role}
                    td.edit #{user.password}