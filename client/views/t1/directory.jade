extends ../layout

block content

    script(type='text/javascript', src='/js/t1/directory.js')

    #table.col-12
        table.cell-border
            thead
                tr
                    th Client Name
                    th Preparer
                    th T1135

            tbody
                each client in clients
                    tr(data-href="/client/" + client.pathName)
                        td.text-nowrap #{client.fileName}
                        td #{client.preparer}
                        td
                            if client.t1135 == 'N' || client.t1135 == ''
                                | 0
                            if client.t1135 == 'SIMPLE'
                                | 1
                            if client.t1135 == 'COMPLICATED'
                                | 2