extends layout

block content
    script(type="text/javascript", src='/js/jquery.floatThead.js')
    script(type="text/javascript", src='/js/index/monitoring_sheet.js')
    script(type='text/javascript').
        var pyt = "#{pyt}";
    script(src='/js/index/monitoring_sheet.js')

    ul.nav.nav-tabs
        li.nav-item
            a.nav-link.active(data-toggle='tab' href='#normal') Normal
        li.nav-item
            a.nav-link(data-toggle='tab' href='#packed') Packed
        li.nav-item
            a.nav-link(data-toggle='tab' href='#emailed') Emailed
        li.nav-item
            a.nav-link(data-toggle='tab' href='#pickedUp') Picked Up

    #table.col-12.tab-content(style='border-top: 0')
        - for (var i = 0; i < clients.length; i++)
            div(id=clients[i][0]).tab-pane
                table.nowrap(id=clients[i][0] + 'Table').cell-border
                    thead
                        tr
                            th Interview Date
                            th Phone Number
                            th Cell
                            th Email
                            th Slip
                            th Self Employed
                            th T1135
                            th Rental
                            th Stock
                            th New
                            th Picked Up
                            th Husband Last Name
                            th Husband First Name
                            th Wife Last Name
                            th Wife First Name
                            th Group
                            th Pickup Date
                            th Interviewer
                            th Preparer
                            th Preparer Done
                            th Checker
                            th Checker Done
                            th Outstanding Info
                            th Remarks
                            th Ready for Pickup
                            th Call Date
                            th Pickup OK
                            th Emailed
                            th PYT Received
                            th Things to do After Pickup
                    tfoot
                        tr
                            th Interview Date
                            th Phone Number
                            th Cell
                            th Email
                            th Slip
                            th Self Employed
                            th T1135
                            th Rental
                            th Stock
                            th New
                            th Picked Up
                            th Husband Last Name
                            th Husband First Name
                            th Wife Last Name
                            th Wife First Name
                            th Group
                            th Pickup Date
                            th Interviewer
                            th Preparer
                            th Preparer Done
                            th Checker
                            th Checker Done
                            th Outstanding Info
                            th Remarks
                            th Ready for Pickup
                            th Call Date
                            th Pickup OK
                            th Emailed
                            th PYT Received
                            th Things to do After Pickup
                    tbody
                        each client in clients[i][1]
                            tr.clickable-row(data-href="/client/" + client.pathName)
                                td.date.text-nowrap #{client.interviewDate}
                                td.text-nowrap #{client.tel.number}
                                td.text-nowrap #{client.cell.number}
                                td.text-nowrap #{client.email.value}
                                td.check #{client.slips ? 'Y' : ''}
                                td.check #{client.selfEmployed ? 'Y' : ''}
                                td #{client.t1135}
                                td.check #{client.rental ? 'Y' : ''}
                                td.check #{client.stocks ? 'Y' : ''}
                                td.check #{client.new ? 'Y' : ''}
                                td.check.toggle #{client.pickedUp ? 'Y' : ''}
                                td.text-nowrap #{client.husband ? client.husband.lastName : ''}
                                td.text-nowrap #{client.husband ? client.husband.firstName : ''}
                                td.text-nowrap #{client.wife ? client.wife.lastName : ''}
                                td.text-nowrap #{client.wife ? client.wife.firstName : ''}
                                td.text-nowrap #{client.group}
                                td.date.text-nowrap #{client.pickupDate}
                                td #{client.interviewer}
                                td.text-nowrap.edit #{client.preparer}
                                td #{client.preparerDone ? 'Y' : ''}
                                td #{client.checker}
                                td.check.toggle #{client.checkerDone ? 'Y' : ''}
                                td.text-nowrap.edit #{client.outstandingInfo}
                                td.text-nowrap.edit #{client.remarks}
                                td.check.toggle #{client.packed ? 'Y' : ''}
                                td.date.text-nowrap.date-edit #{client.callDate}
                                td.check.toggle #{client.pickupOk ? 'Y' : ''}
                                td.text-nowrap.date-edit #{client.emailed}
                                td.text-nowrap.pyt #{client.pytReceived}
                                td.text-nowrap.edit #{client.thingsToDo}