extends layout

block content
    script(type="text/javascript").
        var list = !{JSON.stringify(list)};
    script(src='/js/users/users_list.js')

    ul.nav.nav-tabs
        - for (var i = 0; i < list.length; i++)
            li.nav-item
                a.nav-link(data-toggle='tab' href='#' + list[i][0]) #{list[i][0]}

    #table.tab-content(style='border-top: 0')
        - for (var i = 0; i < list.length; i++)
            div(id=list[i][0]).tab-pane
                table.cell-border
                    thead
                        tr
                            th Phone Number
                            th Husband Last Name
                            th Husband First Name
                            th Wife Last Name
                            th Wife First Name
                            th Slips
                            th Self Employed
                            th T1135
                            th Rental
                            th Stocks
                            th New
                            th Picked Up
                            th Status
                    tbody
                        each client in list[i][1]
                            tr
                                td #{client.tel.number}
                                td #{client.husband.lastName}
                                td #{client.husband.firstName}
                                td #{client.wife.lastName}
                                td #{client.wife.firstName}
                                td.check #{client.slips}
                                td.check #{client.selfEmployed}
                                td #{client.t1135}
                                td.check #{client.rental}
                                td.check #{client.stocks}
                                td.check #{client.new}
                                td.check #{client.pickedUp}
                                td #{client.preparerDone}